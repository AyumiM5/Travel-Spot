<h2>New Schedule</h2>
<div class="my-3">
  <%= form_with(model:[note[0], schedule], local: true) do |f| %>
    <%= f.label "日程", class:"col-3" %>
    <%= f.select :day, Schedule.day_methods.keys, {prompt: "選択してください"}, class:"col-6" %>
    <%= f.submit "スケジュール追加", class: "offset-3 col-3 btn-sm btn btn-secondary" %>
  <% end %>
</div>

<div class="container my-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>Map</h2>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Notes</h2>
      <% @schedules.each do |schedule| %>
        <div class="schedule">
          <div class="schedule_header">
            <div class="schedule_header_title"><%= schedule.day %>日目</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>