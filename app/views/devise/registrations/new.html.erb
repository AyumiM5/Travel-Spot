<div class="login">
  <div class="container py-5">
    <div class="row w-75 mx-auto shadow-lg bg-white bg-opacity-50">
      <div class="col-12 mt-3 text-center">
        <span><b>Join to Trabel Notes</b></span>
      </div>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="offset-1 mt-3">
          <div class="col-5"><%= f.label :name %></div>
          <div class="offset-1 col-7"><%= f.text_field :name, autofocus: true, autocomplete: "name" %></div>
        </div>
      
        <div class="offset-1 mt-3">
          <%= f.label :email, class:"col-5" %>
          <%= f.email_field :email, autocomplete: "email", class:"offset-1 col-7" %>
        </div>
      
        <div class="offset-1 mt-3">
          <div class="col-5">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 以上で登録して下さい)</em>
            <% end %>
          </div>
          <div><%= f.password_field :password, autocomplete: "new-password", class:"offset-1 col-7" %></div>
        </div>
      
        <div class="offset-1 mt-3">
          <%= f.label :password_confirmation, class:"col-3" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"offset-1 col-7" %>
        </div>
      
        <div class="my-4">
          <%= f.submit "新規会員登録", class:"col-4 mx-auto btn btn-block btn-primary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="container py-1">
    <div class="row w-75 mx-auto shadow-lg bg-white bg-opacity-50">
      <div class="col-12 mt-3 text-center">
        <span><b>既に会員登録がお済の方</b></span>
        <div class="my-4">
          <%= link_to "ログイン", new_user_session_path, class:"col-4 mx-auto btn btn-block btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
