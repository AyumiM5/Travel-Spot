      <div class="col-md-4 my-3">
        <h6 class="text-white mt-2 mb-3">Link</h6>
        <ul class="p-0 list-unstyled">
          <li>
            <a href="" title="About" class="text-white-50">お問い合わせ</a>
          </li>
          <li>
            <%= link_to "/" do %>
              <i class="fab fa-instagram text-white-50"></i>
