            <li><%= link_to "Notes", notes_path, class:"text-white-50" %></li>
            <li><%= link_to "ホーム", root_path, class:"text-white-50" %></li>
            <li><%= link_to "マイページ", mypage_path, class:"text-white-50" %></li>
