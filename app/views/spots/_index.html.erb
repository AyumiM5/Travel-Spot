<% note.spots.each do |spot| %>
  <div class="row mb-2">
    <div class="col-1">
      <i class="far fa-bookmark fa-2x float-right"></i>
    </div>
    <div class="col-10">
      <div class="spot-name"><b><%= spot.address %></b></div>
      <div class="show-spot-body mt-2 col-12"><%= spot.body %></div>
      <div class="text-right">
        <%= link_to "削除", note_spot_path(note.id, spot.id), method: :delete, class:'btn btn-sm btn-secondary', remote: true %>
      </div>
    </div>
  </div>
<% end %>