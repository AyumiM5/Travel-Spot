<div class="container mt-5">
  <div class="row pb-3">
    <div class="col-3">
      <%= render 'users/info', user: @user, notes: @user_notes %>
    </div>
    <div class="col-9">
      <h1><b style="color: #E08504;">下</b>書き</h1>
      <% if @notes.count == 0 %>
        <div>下書きありません</div>
      <% else %>
        <%= render 'notes/index', notes: @notes %>
      <% end %>
    </div>
  </div>
</div>