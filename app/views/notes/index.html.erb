<div class="container mt-5 pb-3">
  <div class="row">
    <div class="col-3">
      <%= render 'searchs/form', tags: @tags %>
    </div>
    <div class="col-8 ml-3">
      <h1><b style="color: #E08504;">投</b>稿一覧</h1>
      <% if @notes.count == 0 %>
        <div>投稿はありません</div>
      <% else %>
        <%= render 'notes/index', notes: @notes %>
      <% end %>
      <div class="row col-10 m-auto">
        <%= paginate @notes %> 
      </div>
    </div>
  </div>
</div>