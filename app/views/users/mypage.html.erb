<div class="container mt-5 pb-5">
  <div class="row">
    <div class="col-3 users-info">
      <%= render 'users/info', user: @user, notes: @user_notes %>
    </div>
    <div class="col-8 ml-3">
      <h1><b style="color: #E08504;">M</b>y <b style="color: #E08504;">P</b>age</h1>
      <p>マイページ</p>
      <% if @notes.count == 0 %>
        <div>投稿はありません</div>
      <% else %>
        <%= render 'notes/index', notes: @notes %>
      <% end %>
    </div>
  </div>
</div>