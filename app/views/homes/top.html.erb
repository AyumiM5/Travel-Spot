<% if flash[:notice] %>
  <div class="container">
    <div class="row mt-5 ml-5">
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row mt-5">
    <div class="col-11 m-auto">
      <%= render "homes/main" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row mt-3">
    <div class="col-11 m-auto">
      <%= render "homes/about" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row mt-3">
    <div class="col-11 m-auto">
      <%= render "homes/notes", best_notes: @best_notes %>
    </div>
  </div>
</div>



<div class="row justify-content-center">
  <%= link_to new_user_registration_path, class:"col-6 d-flex align-items-center justify-content-center" do %>
    <h1 class="go-signin">
      Let's start
    </h1>
  <% end %>
</div>